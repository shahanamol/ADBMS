create view policy_holder as select policy_no,issue_date,name,reg_no,model,yom,cc,sc,value,policy_amt,mode from customer natural join policy natural join vehicle;

create view claim as select claim_no,policy_no,name,reg_no,doa,location,make,model,amt from ((((accident natural join participated)natural join policy)natural join owns)natural join vehicle)natural join customer;

delimiter $
mysql> create procedure policy(IN claim_nom int,OUT amount int)
    -> Begin
    -> select amt from participated where claim_nom=claim_no;
    -> End$

